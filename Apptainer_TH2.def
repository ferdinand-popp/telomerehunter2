Bootstrap: docker
From: python:3.12-slim

%post
    # Install system dependencies and Chromium
    apt-get update
    apt-get install -y \
        wget \
        fonts-liberation \
        libasound2 \
        libatk-bridge2.0-0 \
        libatk1.0-0 \
        libc6 \
        libcairo2 \
        libcups2 \
        libdbus-1-3 \
        libdrm2 \
        libgbm1 \
        libgtk-3-0 \
        libnspr4 \
        libnss3 \
        libx11-6 \
        libxcomposite1 \
        libxdamage1 \
        libxext6 \
        libxfixes3 \
        libxrandr2 \
        libxrender1 \
        libxss1 \
        libxtst6 \
        xdg-utils \
        chromium \
        --no-install-recommends
    rm -rf /var/lib/apt/lists/*

    # Copy the local project into the container
    cp -r /mnt/context/telomerehunter2 /telomerehunter2

    # Install the Python package using pip
    pip install /telomerehunter2/. --no-cache-dir

%runscript
    exec /bin/bash